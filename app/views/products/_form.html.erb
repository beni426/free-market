<%= form_with(model: product, local: true) do |form| %>
<% if product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class='post-form'>

  <div class="field">
    <%= form.label :image %>
    <%= form.fields_for :images do |image| %>
    <%= image.file_field :image, class: 'products_new-file' %>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.text_field :condition %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :delivery_charge %>
    <%= form.number_field :delivery_charge %>
  </div>

  <div class="field">
    <%= form.label :shipping_area %>
    <%= form.text_field :shipping_area %>
  </div>

  <div class="field">
    <%= form.label :shipping_days %>
    <%= form.number_field :shipping_days %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
</div>